mixin basket-page()
  -
    const itemsData = [
      {
        image: {
          path: "content/basket",
          name: "diamond",
          format: "png",
          width: 190,
          height: 202,
          alt: "бриллиант",
        },
        title: "Бриллиант",
        buttonClose: true,
        infoList: [
          {
            name: "Размер",
            value: "1.34",
          },
          {
            name: "Чистота",
            value: "D",
          },
          {
            name: "Цвет",
            value: "VVS2",
          },
        ],
        priceValue: "320&nbsp;000&nbsp;₽",
      },
      {
        image: {
          path: "content/basket",
          name: "ring-1",
          format: "png",
          width: 190,
          height: 202,
          alt: "Кольцо",
        },
        title: "Austerio кольцо",
        buttonClose: true,
        infoSelect: {
          optionsList: [
            {text: "Размер: 15 мм", value: "size-15"},
            {text: "Размер: 16 мм", value: "size-16", isActive: true},
            {text: "Размер: 17 мм", value: "size-17"},
            {text: "Размер: 18 мм", value: "size-18"}
          ],
          dataName: "austerio-size",
        },
        priceValue: "320&nbsp;000&nbsp;₽",
      },
      {
        image: {
          path: "content/basket",
          name: "ring-2",
          format: "png",
          width: 190,
          height: 202,
          alt: "кольцо",
        },
        title: "Серьги Racio",
        buttonClose: true,
        infoSelect: {
          optionsList: [
            {text: "Длина: 25 см", value: "length-25"},
            {text: "Длина: 26 см", value: "length-26"},
            {text: "Длина: 27 см", value: "length-27", isActive: true},
            {text: "Длина: 28 см", value: "length-28"}
          ],
          dataName: "racio-length",
        },
        priceValue: "320&nbsp;000&nbsp;₽",
      },
    ]
  .basket-page
    .container
      .basket-page__form(data-validate)
        form(action="#")
          .basket-page__wrapper
            section.basket-page__basket
              .basket-page__heading
                h1.title-medium Корзина
              ul.basket-page__list
                each item in itemsData
                  li.basket-page__item
                    +card-item(item)
            section.basket-page__order
              .basket-page__heading
                h2.title-medium-2 Оформление
              +ordering()
            section.basket-page__total
              +total-card()
