mixin picture(path, image, format, width, height, altText, mobile)
  picture(class!=attributes.class)
    if (mobile)
      source(type='image/webp', media="(max-width: 767px)", srcset="img/" + path + "/" + image + "-mobile.webp" + ", " + "img/" + path + "/" + image + "-mobile@2x.webp" + " 2x")
      source(type='image/webp', srcset="img/" + path + "/" + image + ".webp" + ", " + "img/" + path + "/" + image + "@2x.webp" + " 2x")
      source(media="(max-width: 767px)", srcset="img/" + path + "/" + image + `-mobile.${format}` + ", " + "img/" + path + "/" + image + `-mobile@2x.${format}` + " 2x")
      img(src="img/" + path + "/" + image + "." + format, srcset= "img/" + path + "/" + image + "@2x." + format + " 2x", width= width, height= height, alt= altText)
    else
      source(type='image/webp', srcset="img/" + path + "/" + image + ".webp" + ", " + "img/" + path + "/" + image + "@2x.webp" + " 2x")
      img(src="img/" + path + "/" + image + "." + format, srcset= "img/" + path + "/" + image + "@2x." + format + " 2x", width= width, height= height, alt= altText)
